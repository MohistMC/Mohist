+    public boolean setSuspended(boolean suspend) {
+        if(suspend && !canSuspend()) return false;
+        if (!suspend) {
+            server.resetEmptySince();
+        }
+
+        if(suspended.compareAndSet(!suspend, suspend)) {
+            if(!isMainThread() && !suspend) {
+                synchronized(suspended) {
+                    suspended.notifyAll();
+                }
+            }
+            return true;
+        }
+
+        return false;
+    }
